root = true

[*]
charset = utf-8
indent_size = 4
tab_width = 4
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_size = 2
tab_width = 2

[*.json]
indent_size = 2
tab_width = 2

[*{.ts,.tsx}]
indent_size = 2
tab_width = 2

[*{.css,.scss}]
indent_size = 2
tab_width = 2

[*.json]
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab


